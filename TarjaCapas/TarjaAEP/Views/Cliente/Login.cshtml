    <!-- BEGIN THEME STYLES -->
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/assets/global/css/components.css")" />
    <link rel="stylesheet" type="text/css" href="@Url.Content("~/assets/global/css/plugins.css")" />
